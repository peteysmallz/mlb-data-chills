.scoreboard-ext-container
  display: flex
  flex-direction: row

  .scoreboard-section
    display: flex
    flex-direction: column
    padding: 10px
    height: 159px
    border-right: 1px solid #cbccce;
    float: left;

  .header
    color: #a5a6a7;
    font-size: 12px;
    font-weight: 400;
    margin-bottom: 8px;
    overflow: hidden;
    padding-top: 10px
    text-transform: uppercase;

  .player-row
    display: flex

  .img-container
    display: table-cell
    height: 40px
    margin: 0
    min-width: 40px
    overflow: hidden
    padding-right: 4px
    vertical-align: middle
    width: 40px
    border: #dcdddf 1px solid
    border-radius: 50px
    position: inherit

    .headshot-wrapper
      height: 100%
      position: relative
      width: 100%

    .headshot
      max-width: 50px
      bottom: 0
      left: -3px
      margin: 0 auto
      position: absolute
      right: 0
      top: 0

  .pitcher-meta
  .hitter-meta
  .team-meta
    width: auto
    display: flex
    flex-direction: column
    font-size: 11px;
    line-height: 1.2;
    padding-left: 9px;
    vertical-align: middle;

    .name
      color: #48494a  // Should be shared style for <a href"">
      outline: 0 !important;  // Should be shared style for <a href"">
      background: transparent;  // Should be shared style for <a href"">
      text-decoration: none;  // Should be shared style for <a href"">
      max-width: 110px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      vertical-align: top;
      font-size: 11px;
      line-height: 1.2;

